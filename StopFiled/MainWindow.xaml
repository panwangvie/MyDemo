<Window x:Class="StopFiled.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StopFiled"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Horizontal">
            <Label Content="文件路径：" Height="36" HorizontalAlignment="Center" VerticalAlignment="Center" VerticalContentAlignment="Center"></Label>
            <TextBox  Height="36" Width="360"  HorizontalAlignment="Left" Margin="30" Text="{Binding FilePath,Mode=TwoWay}"></TextBox>
            <Button Content="结束文件使用" Height="36" Command="{Binding StopCommand}"></Button>
        </StackPanel>
    </Grid>
</Window>
